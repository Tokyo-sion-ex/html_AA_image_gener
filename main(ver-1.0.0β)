    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const imageInput = document.getElementById('imageInput');
            const uploadArea = document.getElementById('uploadArea');
            const previewImage = document.getElementById('previewImage');
            const widthRange = document.getElementById('widthRange');
            const widthValue = document.getElementById('widthValue');
            const charSet = document.getElementById('charSet');
            const convertBtn = document.getElementById('convertBtn');
            const outputArea = document.getElementById('outputArea');
            const copyBtn = document.getElementById('copyBtn');
            const downloadBtn = document.getElementById('downloadBtn');
            const clearBtn = document.getElementById('clearBtn');
            
            let currentImage = null;
            
            // ãƒ•ã‚¡ã‚¤ãƒ«ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰ã®å‡¦ç†
            uploadArea.addEventListener('click', () => imageInput.click());
            
            uploadArea.addEventListener('dragover', (e) => {
                e.preventDefault();
                uploadArea.style.backgroundColor = 'rgba(253, 187, 45, 0.2)';
            });
            
            uploadArea.addEventListener('dragleave', () => {
                uploadArea.style.backgroundColor = '';
            });
            
            uploadArea.addEventListener('drop', (e) => {
                e.preventDefault();
                uploadArea.style.backgroundColor = '';
                
                if (e.dataTransfer.files.length) {
                    imageInput.files = e.dataTransfer.files;
                    handleImageUpload(e.dataTransfer.files[0]);
                }
            });
            
            imageInput.addEventListener('change', (e) => {
                if (e.target.files.length) {
                    handleImageUpload(e.target.files[0]);
                }
            });
            
            // ç”»åƒã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰å‡¦ç†
            function handleImageUpload(file) {
                if (!file.type.match('image.*')) {
                    alert('ç”»åƒãƒ•ã‚¡ã‚¤ãƒ«ã‚’é¸æŠã—ã¦ãã ã•ã„');
                    return;
                }
                
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    previewImage.src = e.target.result;
                    previewImage.style.display = 'block';
                    currentImage = new Image();
                    currentImage.src = e.target.result;
                };
                
                reader.readAsDataURL(file);
            }
            
            // å¹…ã‚¹ãƒ©ã‚¤ãƒ€ãƒ¼ã®æ›´æ–°
            widthRange.addEventListener('input', () => {
                widthValue.textContent = widthRange.value;
            });
            
            // å¤‰æ›ãƒœã‚¿ãƒ³ã®å‡¦ç†
            convertBtn.addEventListener('click', () => {
                if (!currentImage) {
                    alert('ç”»åƒã‚’ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰ã—ã¦ãã ã•ã„');
                    return;
                }
                
                convertToAsciiArt();
            });
            
            // ã‚¢ã‚¹ã‚­ãƒ¼ã‚¢ãƒ¼ãƒˆå¤‰æ›é–¢æ•°
            function convertToAsciiArt() {
                const width = parseInt(widthRange.value);
                const charSetValue = charSet.value;
                
                let chars;
                switch(charSetValue) {
                    case 'dense':
                        chars = ['â–ˆ', 'â–“', 'â–’', 'â–‘', ' '];
                        break;
                    case 'simple':
                        chars = ['@', '#', '=', '+', '-', '.', ' '];
                        break;
                    case 'blocks':
                        chars = ['â–ˆ', 'â–„', 'â–€', ' '];
                        break;
                    default:
                        chars = ['@', '%', '#', '*', '+', '=', '-', ':', '.', ' '];
                }
                
                // ã‚­ãƒ£ãƒ³ãƒã‚¹ã‚’ä½œæˆã—ã¦ç”»åƒã‚’æç”»
                const canvas = document.createElement('canvas');
                const ctx = canvas.getContext('2d');
                
                // ã‚¢ã‚¹ã‚­ãƒ¼ã‚¢ãƒ¼ãƒˆã®å¹…ã«åˆã‚ã›ã¦é«˜ã•ã‚’è¨ˆç®—
                const aspectRatio = currentImage.height / currentImage.width;
                const height = Math.floor(width * aspectRatio * 0.5); // æ–‡å­—ã®ç¸¦æ¨ªæ¯”ã‚’è€ƒæ…®
                
                canvas.width = width;
                canvas.height = height;
                
                // ç”»åƒã‚’ã‚­ãƒ£ãƒ³ãƒã‚¹ã«æç”»
                ctx.drawImage(currentImage, 0, 0, width, height);
                
                // ãƒ”ã‚¯ã‚»ãƒ«ãƒ‡ãƒ¼ã‚¿ã‚’å–å¾—
                const imageData = ctx.getImageData(0, 0, width, height);
                const data = imageData.data;
                
                // ã‚¢ã‚¹ã‚­ãƒ¼ã‚¢ãƒ¼ãƒˆã‚’ç”Ÿæˆ
                let asciiArt = '';
                
                for (let y = 0; y < height; y++) {
                    for (let x = 0; x < width; x++) {
                        const index = (y * width + x) * 4;
                        const r = data[index];
                        const g = data[index + 1];
                        const b = data[index + 2];
                        const a = data[index + 3];
                        
                        // é€æ˜åº¦ãŒä½ã„å ´åˆã¯ç©ºç™½
                        if (a < 128) {
                            asciiArt += ' ';
                            continue;
                        }
                        
                        // è¼åº¦ã‚’è¨ˆç®—
                        const brightness = (0.299 * r + 0.587 * g + 0.114 * b) / 255;
                        
                        // è¼åº¦ã«åŸºã¥ã„ã¦æ–‡å­—ã‚’é¸æŠ
                        const charIndex = Math.floor(brightness * (chars.length - 1));
                        const char = chars[charIndex];
                        
                        // ã‚«ãƒ©ãƒ¼ã‚³ãƒ¼ãƒ‰ã‚’è¿½åŠ 
                        asciiArt += `<span style="color: rgb(${r}, ${g}, ${b})">${char}</span>`;
                    }
                    asciiArt += '\n';
                }
                
                // çµæœã‚’è¡¨ç¤º
                outputArea.innerHTML = asciiArt;
            }
            
            // ã‚³ãƒ”ãƒ¼ãƒœã‚¿ãƒ³ã®å‡¦ç†
            copyBtn.addEventListener('click', () => {
                // HTMLã‚¿ã‚°ã‚’é™¤å»ã—ãŸãƒ†ã‚­ã‚¹ãƒˆã‚’å–å¾—
                const text = outputArea.textContent || outputArea.innerText;
                
                if (!text || text === 'å¤‰æ›ã•ã‚ŒãŸã‚¢ã‚¹ã‚­ãƒ¼ã‚¢ãƒ¼ãƒˆãŒã“ã“ã«è¡¨ç¤ºã•ã‚Œã¾ã™') {
                    alert('å¤‰æ›ã™ã‚‹ã‚¢ã‚¹ã‚­ãƒ¼ã‚¢ãƒ¼ãƒˆãŒã‚ã‚Šã¾ã›ã‚“');
                    return;
                }
                
                // ã‚¯ãƒªãƒƒãƒ—ãƒœãƒ¼ãƒ‰ã«ã‚³ãƒ”ãƒ¼
                navigator.clipboard.writeText(text).then(() => {
                    alert('ã‚¢ã‚¹ã‚­ãƒ¼ã‚¢ãƒ¼ãƒˆã‚’ã‚¯ãƒªãƒƒãƒ—ãƒœãƒ¼ãƒ‰ã«ã‚³ãƒ”ãƒ¼ã—ã¾ã—ãŸ');
                }).catch(err => {
                    console.error('ã‚³ãƒ”ãƒ¼ã«å¤±æ•—ã—ã¾ã—ãŸ:', err);
                    alert('ã‚³ãƒ”ãƒ¼ã«å¤±æ•—ã—ã¾ã—ãŸ');
                });
            });
            
            // ãƒ€ã‚¦ãƒ³ãƒ­ãƒ¼ãƒ‰ãƒœã‚¿ãƒ³ã®å‡¦ç†
            downloadBtn.addEventListener('click', () => {
                if (!outputArea.innerHTML || outputArea.innerHTML === 'å¤‰æ›ã•ã‚ŒãŸã‚¢ã‚¹ã‚­ãƒ¼ã‚¢ãƒ¼ãƒˆãŒã“ã“ã«è¡¨ç¤ºã•ã‚Œã¾ã™') {
                    alert('å¤‰æ›ã™ã‚‹ã‚¢ã‚¹ã‚­ãƒ¼ã‚¢ãƒ¼ãƒˆãŒã‚ã‚Šã¾ã›ã‚“');
                    return;
                }
                
                // ã‚¢ã‚¹ã‚­ãƒ¼ã‚¢ãƒ¼ãƒˆã‚’ç”»åƒã¨ã—ã¦ä¿å­˜
                const canvas = document.createElement('canvas');
                const ctx = canvas.getContext('2d');
                
                // ã‚­ãƒ£ãƒ³ãƒã‚¹ã‚µã‚¤ã‚ºã‚’è¨­å®š
                const fontSize = 12;
                const lines = outputArea.textContent.split('\n');
                const lineHeight = fontSize * 1.2;
                
                // ãƒ†ã‚­ã‚¹ãƒˆã®å¹…ã¨é«˜ã•ã‚’è¨ˆç®—
                ctx.font = `${fontSize}px monospace`;
                const maxWidth = Math.max(...lines.map(line => ctx.measureText(line).width));
                const height = lines.length * lineHeight;
                
                canvas.width = maxWidth + 20;
                canvas.height = height + 20;
                
                // èƒŒæ™¯ã‚’é»’ã«è¨­å®š
                ctx.fillStyle = 'black';
                ctx.fillRect(0, 0, canvas.width, canvas.height);
                
                // ãƒ†ã‚­ã‚¹ãƒˆã‚’æç”»
                ctx.font = `${fontSize}px monospace`;
                ctx.textBaseline = 'top';
                
                // å…ƒã®HTMLã‹ã‚‰è‰²æƒ…å ±ã‚’æŠ½å‡ºã—ã¦æç”»
                const tempDiv = document.createElement('div');
                tempDiv.innerHTML = outputArea.innerHTML;
                const spans = tempDiv.querySelectorAll('span');
                
                let currentLine = 0;
                let currentChar = 0;
                
                for (let i = 0; i < spans.length; i++) {
                    const span = spans[i];
                    const color = span.style.color;
                    const text = span.textContent;
                    
                    // æ”¹è¡Œã‚’å‡¦ç†
                    if (text === '\n') {
                        currentLine++;
                        currentChar = 0;
                        continue;
                    }
                    
                    // è‰²ã‚’è¨­å®š
                    ctx.fillStyle = color || 'white';
                    
                    // æ–‡å­—ã‚’æç”»
                    for (let j = 0; j < text.length; j++) {
                        const char = text[j];
                        ctx.fillText(char, 10 + currentChar * fontSize * 0.6, 10 + currentLine * lineHeight);
                        currentChar++;
                    }
                }
                
                // ç”»åƒã¨ã—ã¦ãƒ€ã‚¦ãƒ³ãƒ­ãƒ¼ãƒ‰
                const link = document.createElement('a');
                link.download = 'ascii-art.png';
                link.href = canvas.toDataURL();
                link.click();
            });
            
            // ã‚¯ãƒªã‚¢ãƒœã‚¿ãƒ³ã®å‡¦ç†
            clearBtn.addEventListener('click', () => {
                outputArea.innerHTML = 'å¤‰æ›ã•ã‚ŒãŸã‚¢ã‚¹ã‚­ãƒ¼ã‚¢ãƒ¼ãƒˆãŒã“ã“ã«è¡¨ç¤ºã•ã‚Œã¾ã™';
                previewImage.style.display = 'none';
                currentImage = null;
                imageInput.value = '';
            });
        });
    </script>
